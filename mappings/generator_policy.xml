<?xml version="1.0" encoding="UTF-8"?>
<generator_policy>
    <generator name="100_letter" prefix="bg" type="instance" uuid="no">
        <pattern>letter/{id}</pattern>
    </generator>
    <generator name="100a_letter_identifier" prefix="bg" type="instance" uuid="no">
      <pattern>letter/{id}/{identifier}</pattern>
    </generator>
    <generator name="101_letter_index" prefix="bg" type="instance" uuid="no">
        <pattern>letter/{id}/index</pattern>
    </generator>
    <generator name="110_letter_production" prefix="bg" type="any">
        <pattern>letter/{id}/production</pattern>
    </generator>
    <generator name="111_letter_production_date" prefix="bg" type="any">
        <pattern>letter/{id}/production/date</pattern>
    </generator>
    <generator name="120_letter_exchange" prefix="bg" type="any">
        <pattern>letter/{id}/exchange</pattern>
    </generator>
    <generator name="140_letter_transcription" prefix="bg" type="any">
      <pattern>letter/{id}/transcription</pattern>
    </generator>
    <generator name="141_letter_transcription_activity" prefix="bg" type="any">
      <pattern>letter/{id}/transcription_activity</pattern>
    </generator>
    <generator name="150_letter_citation" prefix="bg" type="instance" uuid="no">
      <pattern>letter/{id}/citation</pattern>
    </generator>
    <generator name="160_letter_pages" prefix="bg" type="instance" uuid="no">
      <pattern>letter/{id}/pages</pattern>
    </generator>
    <generator name="121_letter_sender_activity" prefix="bg" type="any">
        <pattern>letter/{id}/sender_activity</pattern>
    </generator>
    <generator name="130_letter_contents" prefix="bg" type="instance" uuid="no">
      <pattern>letter/{id}/content/{pos}</pattern>
    </generator>
    <generator name="200_person" prefix="bg" type="any">
        <pattern>person/{id}</pattern>
    </generator>
    <generator name="202_person_description" prefix="bg" type="any">
        <pattern>person/{id}/description</pattern>
    </generator>
    <generator name="203_person_life_dates" prefix="bg" type="any">
        <pattern>person/{id}/life_dates</pattern>
    </generator>
    <generator name="204_person_nickname" prefix="bg" type="any">
        <pattern>person/{id}/nickname</pattern>
    </generator>
    <generator name="205_person_identifier" prefix="bg" type="any">
      <pattern>person/{id}/identifier</pattern>
    </generator>
    <generator name="000_type" prefix="bg" type="any">
        <pattern>type/{type}</pattern>
    </generator>
    <generator name="GermanDateTime" type="any">
        <custom generatorClass="gr.forth.GermanDate">
            <set-arg name="bound" type="constant" />
            <set-arg name="text" type="xpath" />
        </custom>
    </generator>
    <generator name="122_letter_recipient_activity" prefix="bg" type="any">
        <pattern>letter/{id}/recipient_activity</pattern>
    </generator>
    <generator name="300_place" prefix="bg" type="any">
        <pattern>place/{id}</pattern>
    </generator>
    <generator name="400_subject" prefix="bg" type="any">
        <pattern>subject/{id}</pattern>
    </generator>

    <generator name="401_subject_identifier" prefix="bg" type="any">
      <pattern>subject/{id}/identifier</pattern>
    </generator>

    <generator name="wikidata" prefix="wikidata" type="any">
      <pattern>{image_url}</pattern>
    </generator>
</generator_policy>